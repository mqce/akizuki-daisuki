{
  "manifest_version": 3,
  "name": "Akizuki Wishlist",
  "version": "1.0.0",
  "description": "秋月電子で買いたいもののリストを記録できます",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open"
  },
  "background": {
    "service_worker": "background-wrapper.js"
  },
  "content_scripts": [
    {
      "matches": ["https://akizukidenshi.com/*"],
      "js": ["content.bundle.js"],
      "css": ["style.css"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": ["https://akizukidenshi.com/"],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
